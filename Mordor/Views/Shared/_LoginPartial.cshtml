@using Microsoft.AspNetCore.Identity


@if (User.Identity.IsAuthenticated)
{

    <ul class="nav navbar-nav navbar-right ">
        <li>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name !</a>
        </li>
        <li><a class="nav-link text-dark" asp-action="Logout" asp-controller="Account">Logout</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a  class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a></li>
        <li><a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a></li>
    </ul>
}
