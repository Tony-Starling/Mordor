@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<form asp-action="FullTextSearch" asp-controller="Home" >
    <div class="input-group mb-3">
        <input asp-validation-for="" name="SearchText" type="text" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">@Localizer["Search"]</button>
        </div>
    </div>
</form>


