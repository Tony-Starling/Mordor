@model Mordor.Models.LoginModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@Localizer["Title"]</h1>



<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="UserName"></span>
            </div>
            <input type="text" asp-for="UserName" placeholder="@Localizer["UserName"]" class="form-control">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="Password"></span>
            </div>
            <input type="text" asp-for="Password" placeholder="@Localizer["EnterPassword"]" class="form-control">
        </div>
        <div class="input-group mb-3">
            <div class="form-group input-group-prepend" id="button-addon3">
                <input class="btn btn-outline-secondary" value="@Localizer["Login"]" type="submit" id="button-addon1">
                <a asp-action="Register" asp-controller="Account" class="btn btn-outline-secondary" type="button" id="button-addon2">@Localizer["GoToRegistration"]</a>
            </div>
        </div>
    </div>
</form>