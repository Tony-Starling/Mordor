@model Mordor.Models.RegisterUserModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

    <h1>@Localizer["Title"]</h1>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="UserName"></span>
            </div>
            <input type="text" asp-for="UserName" placeholder="@Localizer["EnterUserName"]" class="form-control">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="Email"></span>
            </div>
            <input type="text" asp-for="Email" placeholder="@Localizer["EnterEmail"]" class="form-control">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="Password"></span>
            </div>
            <input type="text" asp-for="Password" placeholder="@Localizer["EnterPassword"]" class="form-control">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" asp-validation-for="ConfirmPassword"></span>
            </div>
            <input type="text" asp-for="ConfirmPassword" placeholder="@Localizer["ConfirmPassword"]" class="form-control">
            <span></span>
        </div>
        <div>
            <input type="submit" value="@Localizer["ButtonValue"]" class="btn btn-primary" />
        </div>
    </div>
</form>